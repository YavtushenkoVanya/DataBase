            var rooms = new List<Room>
            {
                new Room { Number = "101", Type = "–°—Ç–∞–Ω–¥–∞—Ä—Ç",  Price = 900,  IsFree = true  },
                new Room { Number = "102", Type = "–ü–æ–∫—Ä–∞—â–µ–Ω–∏–π", Price = 1200, IsFree = false },
                new Room { Number = "201", Type = "–õ—é–∫—Å",      Price = 1800, IsFree = true  },
                new Room { Number = "202", Type = "–°—Ç–∞–Ω–¥–∞—Ä—Ç",  Price = 900,  IsFree = false }
            };

            var bookings = new List<Booking>
            {
                new Booking { Client = clients[0], Room = rooms[1], Employee = employees[0],
                    CheckIn = new DateTime(2025,11,6), CheckOut = new DateTime(2025,11,9), TotalPrice = 3600 },

