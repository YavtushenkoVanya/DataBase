            var clients = new List<Client>
            {
                new Client { Name = "–í–ª–∞–¥–∏–º–∏—Ä –†–æ–º–∞–Ω—á—É–∫", Phone = "+380981234567", Email = "vlad@gmail.com" },
                new Client { Name = "–ê–Ω–Ω–∞ –¢–∫–∞—á–µ–Ω–∫–æ", Phone = "+380631234567", Email = "anna@gmail.com" },
                new Client { Name = "–û–ª–µ–≥ –î–æ—Ä–æ—à–µ–Ω–∫–æ", Phone = "+380991111222", Email = "oleg@gmail.com" }
            };

            var employees = new List<Employee>
            {
                new Employee { Name = "–û–∫—Å–∞–Ω–∞ –Ü–≤–∞–Ω–µ–Ω–∫–æ", Position = "–ê–¥–º—ñ–Ω—ñ—Å—Ç—Ä–∞—Ç–æ—Ä" },
                new Employee { Name = "–Ü–≥–æ—Ä –ü–µ—Ç—Ä–µ–Ω–∫–æ", Position = "–ü–æ—Ä—Ç—å—î" }
