            Console.ForegroundColor = ConsoleColor.Yellow;
            Console.WriteLine("‚ïî‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïó");
            Console.WriteLine("‚ïë        üè® –Ü–ù–§–û–†–ú–ê–¶–Ü–ô–ù–ê –°–ò–°–¢–ï–ú–ê –ì–û–¢–ï–õ–Æ         ‚ïë");
            Console.WriteLine("‚ïö‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïù");
            Console.ResetColor();

            Console.WriteLine("\nüìã –ö–û–†–û–¢–ö–ò–ô –û–ü–ò–°:");
            Console.WriteLine("–°–∏—Å—Ç–µ–º–∞ –¥–µ–º–æ–Ω—Å—Ç—Ä—É—î —Ä–æ–±–æ—Ç—É —É—è–≤–Ω–æ—ó –±–∞–∑–∏ –¥–∞–Ω–∏—Ö –≥–æ—Ç–µ–ª—é:");
            Console.WriteLine("–∫–ª—ñ—î–Ω—Ç–∏, –±—Ä–æ–Ω—é–≤–∞–Ω–Ω—è, –≤—ñ–ª—å–Ω—ñ –Ω–æ–º–µ—Ä–∏ —Ç–∞ –ø–µ—Ä—Å–æ–Ω–∞–ª.\n");

            Console.ForegroundColor = ConsoleColor.Cyan;
            Console.WriteLine("=== –°–ü–ò–°–û–ö –ë–†–û–ù–Æ–í–ê–ù–¨ ===");
            Console.ResetColor();
            foreach (var b in bookings)
            {
                Console.WriteLine($"–ö–ª—ñ—î–Ω—Ç: {b.Client.Name}");
                Console.WriteLine($"–ù–æ–º–µ—Ä: {b.Room.Number} ({b.Room.Type}), {b.Room.Price} –≥—Ä–Ω/–¥–æ–±–∞");
                Console.WriteLine($"–ü—Ä–∞—Ü—ñ–≤–Ω–∏–∫: {b.Employee.Name} ({b.Employee.Position})");
                Console.WriteLine($"–ü–µ—Ä—ñ–æ–¥: {b.CheckIn:dd.MM.yyyy} - {b.CheckOut:dd.MM.yyyy}");
                Console.WriteLine($"–ó–∞–≥–∞–ª—å–Ω–∞ —Å—É–º–∞: {b.TotalPrice} –≥—Ä–Ω");
